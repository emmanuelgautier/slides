{{!< main}}

<div class="container form-register-container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-9 col-xs-12">
            <form method="post" action="register" class="form-auth form-register">
                <div class="container-fluid">
                    <h3>Register</h3>
                    <div class="main">
                        <input type="text" name="username" class="form-control" placeholder="username" autofocus>
                        <input type="email" name="email" class="form-control" placeholder="email">
                        <input type="password" name="password" class="form-control" placeholder="password">
                        <input type="password" name="password_confirmation" class="form-control" placeholder="password confirmation">
                        <span class="clearfix"></span>
                    </div>
                    <div class="register-footer">
                        <div class="row">
                            <div class="col-xs-6 col-md-6 pull-right">
                                <button type="submit" class="btn btn-danger pull-right">Register</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
