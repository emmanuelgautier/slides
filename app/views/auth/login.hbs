{{!< main}}

<div class="container form-signin-container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-9 col-xs-12">
            <form method="post" action="login" class="form-auth form-signin">
                <div class="container-fluid">
                    <h3>Login</h3>
                    <div class="social-box">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <a href="/auth/google" class="btn-google">
                                        <i class="fa-google-plus fa-lg"></i>&nbsp;Sign In with Google
                                    </a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <a href="/auth/github" class="btn-github">
                                        <i class="fa-github fa-lg"></i>&nbsp;Sign In with Github
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="main">
                        <input type="text" name="username" class="form-control" placeholder="username" autofocus>
                        <input type="password" name="password" class="form-control" placeholder="password">
                        <span class="clearfix"></span>
                    </div>
                    <div class="login-footer">
                        <div class="row">
                            <div class="col-xs-6 col-md-6">
                                <div class="left-section">
                                    <input type="checkbox">
                                </div>
                            </div>
                            <div class="col-xs-6 col-md-6 pull-right">
                                <button type="submit" class="btn btn-danger pull-right">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
